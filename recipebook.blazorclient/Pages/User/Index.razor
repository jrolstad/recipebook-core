@page "/user"
@using recipebook.blazor.core.ViewModels
@inject UserViewModel ViewModel

<h1>User Details: @ViewModel.Name</h1>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Name</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewModel.Claims)
        {
        <tr>
            <td>@item.Key</td>
            <td>@item.Value</td>
        </tr>
        }
       
    </tbody>
</table>

@code {
    protected override async Task OnInitializedAsync()
    {
        await ViewModel.Initialize();

        await base.OnInitializedAsync();
    }

}
